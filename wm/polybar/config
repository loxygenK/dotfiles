[colors]
; Base vivid color: #ff00ae

background = #fae6f4
; background = #fce1f4
; background = #f5d7ec
; background = #ebcee2

background-alt = #EDB6DC
background-accent = #FACDEB

foreground = #75586d
; foreground = #4d3c46
foreground-alt = #9D4D87
primary = #bfdbba

secondary = #CCBFAB
alert = #b37491

[colors/module]
cpu = ${colors.background-accent}
mem = ${colors.background-accent}
network = ${colors.background-accent}
date = ${colors.background-accent}
vol = ${colors.background-accent}

[bar/execute]
monitor = ${env:MONITOR:DP-0}
width = 100%
height = 35
radius = 0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0

padding-left = 0
padding-right = 3

bottom = true

module-margin-left = 1
module-margin-right = 2

font-0 = PlemolJP Console NF:fontformat=truetype:style=medium:size=16;3
font-1 = PlemolJP NF:fontformat=truetype:style=medium:size=15;3
font-2 = Twemoji:fontformat=truetype:scale=4;4

modules-left = i3 xwindow
modules-right = pulseaudio cpu memory eth-down eth-up ip date

tray-position = right
tray-padding = 3

scroll-up = #i3.prev
scroll-down = #i3.next

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%
label-font = 2
label-foreground = ${colors.foreground}

; label-empty = "No title"
; label-empty-font = 2
; label-empty-foreground = ${colors.background-accent}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

format-mounted-prefix = " DRV: "
format-mounted-prefix-foreground = ${colors.foreground-alt}
format-mounted-underline = ${colors.background-accent}
label-mounted = %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.background-accent}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

; Separator in between workspaces
; label-separator = |


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors/module.cpu}
label = "%percentage:2%%"

[module/memory]
type = internal/memory
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors/module.mem}
label = %percentage_used%%

[module/eth-down]
type = internal/network
interface = enp5s0
interval = 3.0

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
format-connected-underline = ${colors/module.network}

label-connected = %downspeed:9%

format-disconnected =  d/con

[module/eth-up]
type = internal/network
interface = enp5s0
interval = 3.0

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
format-connected-underline = ${colors/module.network}

label-connected = %upspeed:9%

format-disconnected =  d/con

[module/ip]
type = internal/network
interface = enp5s0
interval = 3.0

format-connected-underline = ${colors/module.network}
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =  D/CON

[module/date]
type = internal/date
interval = 5

date = "%m/%d"
date-alt = "%Y-%m-%d"

time = "%H:%M"
time-alt = "%H:%M:%S"

format-prefix = ""
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors/module.date}

label = %date% %time%
label-font = 1

[module/pulseaudio]
type = internal/pulseaudio

format-volume-prefix = "  "
format-volume-prefix-foreground = ${colors.foreground-alt}
format-volume-underline = ${colors/module.vol}
label-volume = %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = 🔇 Muted
label-muted-foreground = #666

interval = 2

[module/powermenu]
type = custom/menu

expand-right = true

format-background = ${colors.background-alt}
format-spacing = 1

label-open = "   "
label-open-foreground = ${colors.foreground-alt}
; label-open-background = ${colors.background-accent}
label-close = " "
label-close-foreground = ${colors.foreground-alt}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = Logout
menu-0-0-exec = #powermenu.open.1
menu-0-1 = Reboot
menu-0-1-exec = #powermenu.open.2
menu-0-2 = "Shutdown "
menu-0-2-exec = #powermenu.open.3


menu-1-0 = " No"
menu-1-0-exec = #powermenu.open.0
menu-1-1 = " Yes "
menu-1-1-exec = i3-msg exit

menu-2-0 = " No"
menu-2-0-exec = #powermenu.open.0
menu-2-1 = " Yes "
menu-2-1-exec = systemctl reboot

menu-3-0 = " No"
menu-3-0-exec = #powermenu.open.0
menu-3-1 = " Yes "
menu-3-1-exec = systemctl poweroff

[settings]
screenchange-reload = true

